{
    "name": "threlte-mcp",
    "version": "1.4.0",
    "description": "MCP server for AI-powered Three.js/Threlte scene inspection and manipulation",
    "keywords": [
        "mcp",
        "model-context-protocol",
        "threlte",
        "three.js",
        "svelte",
        "ai",
        "scene-inspector",
        "debugging"
    ],
    "author": "Raul Contreras",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RaulContreras123/threlte-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/RaulContreras123/threlte-mcp/issues"
    },
    "homepage": "https://github.com/RaulContreras123/threlte-mcp#readme",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./client": {
            "import": "./dist/client/index.js",
            "types": "./dist/client/index.d.ts"
        },
        "./client/*": "./dist/client/*"
    },
    "bin": {
        "threlte-mcp": "dist/cli.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "npm run build:server && npm run build:client",
        "build:server": "tsc -p tsconfig.json",
        "build:client": "tsc -p tsconfig.client.json && node scripts/copy-client.mjs",
        "dev": "tsx src/index.ts",
        "setup": "tsx src/cli.ts setup",
        "test:compatibility": "node test-mcp.js",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@gltf-transform/core": "^4.0.0",
        "@gltf-transform/functions": "^4.0.0",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "meshoptimizer": "^0.24.0",
        "ws": "^8.18.0"
    },
    "peerDependencies": {
        "@threlte/core": ">=7.0.0",
        "svelte": ">=5.0.0",
        "three": ">=0.150.0"
    },
    "peerDependenciesMeta": {
        "@threlte/core": {
            "optional": true
        },
        "svelte": {
            "optional": true
        },
        "three": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/three": "^0.160.0",
        "@types/ws": "^8.5.0",
        "three": "^0.160.0",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
